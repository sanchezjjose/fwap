extends layout

block content
  div.container
    div.content

      if !venues
        h2 Find Trending Events Near You.

        div.disclaimer
          p We ask your permission to receive your current location.
            | We promise not to share this information with anyone,
            | or use this data in any way without your consent.
            | Please accept the browsers request to give us your GPS
            | location, in order to find cool and interesting places near you!

          div.geolocation
            a(href="#")

      else
        if venues.length > 0
          h2 #{venues.length} events trending near you

          div
            for venue in venues
              div.venue
                h3: a(href='#{venue.url}') #{venue.name}
                ul
                 li #[span #{venue.stats.checkinsCount}] total checkins
                 li #[span #{venue.hereNow.count}] are here now

        else
          h2 There are no events trending at the moment in your area.